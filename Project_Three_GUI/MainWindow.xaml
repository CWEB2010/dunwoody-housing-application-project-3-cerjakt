<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dunwoody Housing Application"  WindowState="Maximized" WindowStyle="None" FontFamily="Tw Cen MT" FontSize="18">

    <DockPanel>
        <Image Height="auto" Source="/Resources/sidebanner.png"  VerticalAlignment="Top" HorizontalAlignment="Left" Width="262">
            <!--<Image.DataContext>
                <Properties:Resources/>
            </Image.DataContext>-->
        </Image>
        <StackPanel DockPanel.Dock="Right">
            <Button Width="auto" Height="auto" HorizontalAlignment="Right" Margin="10,10,10,100" Background="White" Foreground="Black" Content="X" FontSize="44"  Click="exit_btn" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.504" />
            <Label Height="auto" FontSize="62" HorizontalContentAlignment="Center">
                <Label.Content>
                    <AccessText TextWrapping="Wrap" TextAlignment="Center" Text="Dunwoody Housing Application"/>
                </Label.Content>

            </Label>
            <Button Content="Residents" MaxWidth="120" MinWidth="120" Background="#FFAA1D2C" Foreground="White" FontSize="22" Height="50" Click="resident_btn"/>
        </StackPanel>

    </DockPanel>
</Window>
